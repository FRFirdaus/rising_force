<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="rf_race_tree_view" model="ir.ui.view">
        <field name="name">rf_race_tree_view</field>
        <field name="model">rf.race</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="rf_race_form_view" model="ir.ui.view">
        <field name="name">rf_race_form_view</field>
        <field name="model">rf.race</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="rf_class_tree_view" model="ir.ui.view">
        <field name="name">rf_class_tree_view</field>
        <field name="model">rf.jobclass</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="rf_class_form_view" model="ir.ui.view">
        <field name="name">rf_class_form_view</field>
        <field name="model">rf.jobclass</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="rf_class_search_view" model="ir.ui.view">
        <field name="name">rf_class_search_view</field>
        <field name="model">rf.jobclass</field>
        <field name="arch" type="xml">
            <search string="Search Class">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="rf_race_action" model="ir.actions.act_window">
        <field name="name">Race</field>
        <field name="res_model">rf.race</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="rf_class_action" model="ir.actions.act_window">
        <field name="name">Race Job Class</field>
        <field name="res_model">rf.jobclass</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>